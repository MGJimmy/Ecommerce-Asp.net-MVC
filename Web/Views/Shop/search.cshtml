@model IEnumerable<DAL.Product>



@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<section id="searchPage">
    <div class="container">
        <h2 class="cartName text-center display-3 my-5">Search results</h2>
        <div class="row productsContainer" id="searchResultsContainer">
            <div class="col-md-4 box mb-4">
                <!-- Start the foreach -->
                @foreach (var item in Model)
                {
                    <div class="image position-relative overflow-hidden">
                        <img class="w-100" src="~/Content/images/products/@item.MainImage" alt="img1" width="250px" height="250px">
                        <img class="top w-100 position-absolute" src=" ~/Content/images/products/@item.SecondaryImage " alt="img1" width="250px" height="250px">
                        <div class="quickview position-absolute w-100 main_color text-center"><i class="fas fa-eye"></i> Quickview</div>
                    </div>
                    <div class="details">
                        <div class="rating">
                            <span><i class="fas fa-star fa-xs text-secondary"></i></span>
                            <span><i class="fas fa-star fa-xs text-secondary"></i></span>
                            <span><i class="fas fa-star fa-xs text-secondary"></i></span>
                            <span><i class="fas fa-star fa-xs text-secondary"></i></span>
                            <span><i class="fas fa-star fa-xs text-secondary"></i></span>
                        </div>
                        <p class="name my-0 text-secondary"> @item.Name </p>
                        <p class="price font-weight-bold text-danger">$ @item.Price </p>
                    </div>
                    <div class="option text-secondary border-top py-2 loginFeature">
                        <div class="addToChart add_chart float-left" data-id=" res[i].id ">
                            <i class="fas fa-shopping-bag"></i>&nbsp;
                            @Html.ActionLink("Add to chart", "AddToCart", new { productId = item.ID })



                        </div>
                        <div class="addedToChart loginFeature d-none added_chart float-left" data-id=" res[i].id "><i class="fas fa-check"></i>&nbsp; Added to chart</div>
                        <div class="addToWishList loginFeature d-none fav float-right" data-id=" res[i].id ">
                            <i class="fas fa-heart fa-lg"></i>
                            @Html.ActionLink(" Wishlist", "AddToWishlist", new { productId = item.ID })



                        </div>
                    </div>
                }
            </div>

            <!-- End the foreach -->
        </div>
        <!-- start if there's no result -->
        @if (TempData.ContainsKey("Msg_emptysearch"))
        {<div id="noResults">
                <div class="alert alert-danger" role="alert">
                    Sorry no match results
                    <br /> @TempData["Msg_emptysearch"]
                </div>
            </div>
        }
        <!-- End if there's no result -->
    </div>
</section>



