<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/siteCss")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0/css/all.min.css" />
    @RenderSection("styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark py-1 py-md-2  text-capitalize w-100 fixed-top">
        <a class="navbar-brand ml-lg-5 ml-sm-0" href="index.html" data-page="page01">Style<span>ford.</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-mobile" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container-md">
            <div class="collapse navbar-collapse col-xs-12" id="nav-mobile">
                <ul class="navbar-nav mx-auto font-weight-bold">
                    <li class="nav-item px-2">
                        <a class="nav-link changeActive pageChangeBtn" href="/Home/Index" data-page="#homePage">home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item px-2">
                        <a class="nav-link changeActive pageChangeBtn" href="/Shop/Index" data-page="#shopPage">Shop</a>
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item px-2 ml-5 logoutFeature">
                            <a class="nav-link changeActive pageChangeBtn" href="/User/Login" data-page="#loginPage">Login</a>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item px-2">
                            <a class="nav-link changeActive pageChangeBtn" href="/Cart">Cart</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link changeActive pageChangeBtn" href="/Wishlist">Wishlist</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link changeActive pageChangeBtn" href="/Home/MyOrders">My Orders</a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="nav-link changeActive pageChangeBtn" href="/User/Logout">Logout</a>
                        </li>
                    }


                    <li class="nav-item px-2">
                        <a class="nav-link changeActive pageChangeBtn" href="/Dashboard">Admin</a>
                    </li>
                </ul>
            </div>
            <div class="nav_icons d-none d-md-block  position-relative ml-auto">
                <i class="search_close_open fas fa-search px-2 position-relative"></i>
                <i class="search_close_open close_icon fas fa-times position-absolute opacity_0"></i>
                @*<a href="/Cart"><i class="fas fa-shopping-cart px-2 border-left toShop"></i></a>*@

            <form id="searchBarForm" class="search_bar form-inline my-2 my-lg-0 position-absolute"action="/shop/search" method="get" >
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchName">
                <button class="position-absolute rounded-circle" type="submit">
                    <i class="fas fa-search "></i>
                </button>
            </form>
            </div>
        </div>
    </nav>
    <div class="py-5 my-5">
        @RenderBody()
    </div>


    <!---------------- Start footer  ------------------->
    <footer class="footer text-white">
        <div class="contact">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <h5 class="text-uppercase mr-4 pb-2 mb-5 font-weight-bold">contact us</h5>

                        <div class="row my-4">
                            <div class="col-2 pt-2"><i class="fas fa-map-marker-alt"></i></div>
                            <div class="col-10 px-0">
                                My Company, 45 Puffin St. <br> Poffinville France.
                            </div>
                        </div>

                        <div class="row my-4">
                            <div class="col-2 pt-2"><i class="fas fa-phone-alt"></i></div>
                            <div class="col-10 px-0">
                                +201 (987) 6641 053 <br>
                                +202 (987) 6641 056
                            </div>
                        </div>

                        <div class="row my-4">
                            <div class="col-2 pt-2"><i class="fas fa-envelope-open"></i></div>
                            <div class="col-10 px-0">
                                info@domainname.com <br>
                                company@outlook.com
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <h5 class="text-uppercase  mr-4 pb-2 mb-5  font-weight-bold">sections</h5>
                        <ul class="list-unstyled text-capitalize">
                            <a href="index.html">
                                <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden" data-page="page01">home   <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            </a>
                            <a href="pages/clothes.html">
                                <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden" data-page="page02">clothes <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            </a>
                            <a href="pages/sport.html">
                                <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden" data-page="page03">sport   <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            </a>
                            <a href="pages/shoes.html">
                                <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden" data-page="page04">shoes   <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            </a>
                            <a href="pages/watches.html">
                                <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden" data-page="page05">watches <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            </a>
                            <a href="pages/bags.html">
                                <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden" data-page="page06">bags    <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            </a>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h5 class="text-uppercase mr-4 pb-2 mb-5 font-weight-bold">customer service</h5>
                        <ul class="list-unstyled text-capitalize">
                            <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden">contact us   <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden">returns       <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden">brands        <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden">site map      <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                            <li class="w-75 border-bottom pb-1 mb-1 overflow-hidden">gift vouchers <i class="fas fa-angle-right fa-sm float-right pt-2"></i></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h5 class="text-uppercase mr-4 pb-2 mb-5  font-weight-bold">newsletter</h5>
                        <p class="my_p mb-4">There are many variations of passages of Lorem Ipsum available,or randomised words which don't look even slightly</p>
                        <input class="py-2 px-3 my-3 text-white" type="email" name="e-mail" id="mail" placeholder="Enter your E-mail">
                        <button class="py-1 px-3 text-white text-capitalize" type="submit">submit</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="copyright text-center text-capitalize py-4">
            &copy; 2020 all rights reversed MG Jimmy
        </div>
    </footer>

    <!---Start Scroll to top button----->
    <div class="scroll_top text-center">
        <i class="fas fa-chevron-up"></i>
    </div>

    <!--End Scroll to top button------>
    <!---Start Loading screen--->
    <div class="loading">
        <div class="loading_position">
            <div class="sk-chase">
                <div class="sk-chase-dot"></div>
                <div class="sk-chase-dot"></div>
                <div class="sk-chase-dot"></div>
                <div class="sk-chase-dot"></div>
                <div class="sk-chase-dot"></div>
                <div class="sk-chase-dot"></div>
            </div>
        </div>
    </div>
    <!----End Loading screen----->



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap") 
    @Scripts.Render("~/bundles/siteScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
